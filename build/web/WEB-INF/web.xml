<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerController1</servlet-name>
        <servlet-class>controller.CustomerController1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeController1</servlet-name>
        <servlet-class>controller.EmployeeController1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>controller.ProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayImageServlet</servlet-name>
        <servlet-class>controller.DisplayImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingController</servlet-name>
        <servlet-class>controller.BookingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>displayimgbook</servlet-name>
        <servlet-class>controller.displayimgbook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerController1</servlet-name>
        <url-pattern>/CustomerController1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeController1</servlet-name>
        <url-pattern>/EmployeeController1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/ProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayImageServlet</servlet-name>
        <url-pattern>/displayimg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingController</servlet-name>
        <url-pattern>/bookcontrol</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>displayimgbook</servlet-name>
        <url-pattern>/displayimgbook</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
